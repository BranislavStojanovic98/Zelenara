<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LoginWindow" Width="800" Height="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Login" Margin="307,10,307,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="48" FontFamily="Agency FB" BorderThickness="0,0,0,3">
            <Label.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Gray" Offset="1"/>
                </LinearGradientBrush>
            </Label.BorderBrush>
        </Label>
        <Label Content="Korisničko ime:" HorizontalAlignment="Left" Margin="50,160,0,0" VerticalAlignment="Top" Width="210" FontSize="26"/>
        <Label Content="Lozinka:" HorizontalAlignment="Left" Margin="50,260,0,0" VerticalAlignment="Top" Width="210" FontSize="26"/>
        <PasswordBox x:Name="loginPasswordBox" Height="30" Margin="290,270,290,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="loginButton" Content="Log in" Height="44" Margin="316,410,316,0" VerticalAlignment="Top" FontSize="30" FontFamily="Agency FB" Click="logInClick"/>
        <TextBox x:Name="loginUsernameBox" Margin="290,170,290,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
