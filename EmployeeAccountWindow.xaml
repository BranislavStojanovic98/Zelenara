<Window x:Name="EmployeeAccountWindow1" x:Class="WpfApp1.EmployeeAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="EmployeeAccountWindow" Height="600" Width="460" Closing="EmployeeAccountWindowClosing">
    <Grid x:Name="adminEmployeeLoginAccountGrid" Grid.Column="1" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
        <Label x:Name="employeeLabel1" Content="Korisnički nalog" Margin="10,10,10,0" VerticalAlignment="Top" FontFamily="Agency FB" FontSize="36" HorizontalContentAlignment="Center"/>
        <Label x:Name="employeeLabel2" Content="zaposlenog" Margin="10,68,10,0" VerticalAlignment="Top" FontFamily="Agency FB" FontSize="36" BorderThickness="0,0,0,2" BorderBrush="Gray" HorizontalContentAlignment="Center"/>
        <Label x:Name="employeeLabel3" Content="Korisničko ime:" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top" FontSize="25" FontFamily="Agency FB"/>
        <Label x:Name="employeeLabel4" Content="Lozinka:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="25" FontFamily="Agency FB" Height="38"/>
        <TextBox x:Name="employeeAccountNameBox" Margin="174,182,5,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" FontFamily="Agency FB" Height="33"/>
        <PasswordBox x:Name="employeeAccountPasswordBox" Height="33" Margin="174,0,5,0" VerticalAlignment="Center" FontSize="20" FontFamily="Agency FB"/>
        <PasswordBox x:Name="employeeAccountPasswordConfirmBox" Height="33" Margin="174,360,5,0" VerticalAlignment="Top" FontSize="20" FontFamily="Agency FB"/>
        <Label x:Name="employeeLabel5" Content="Potvrda lozinke:" HorizontalAlignment="Left" Margin="10,355,0,0" VerticalAlignment="Top" FontSize="25" FontFamily="Agency FB" Height="38" Width="159"/>
        <Button x:Name="employeeAccountConfirmButton" Margin="82,489,82,40" Content="Potvrdi" BorderBrush="Gray" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontSize="24" FontFamily="Agency FB" Click="confirmEmployeeAccountClick"/>
        <Border BorderBrush="Gray" BorderThickness="2,2,2,2" Visibility="Hidden"/>
        <Button x:Name="employeeAccountConfirmChangesButton" Margin="82,489,82,40" Content="Izmijeni" BorderBrush="Gray" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontSize="24" FontFamily="Agency FB" Click="confirmEmployeeAccountChangeClick" Visibility="Collapsed"/>
        <CheckBox x:Name="isAdminCheckBox" Content="Administrator" HorizontalAlignment="Left" Margin="174,427,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Agency FB"/>
    </Grid>
</Window>
